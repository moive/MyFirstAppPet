@model MyFirstApp.Models.Pet

@{
    ViewBag.Title = "Contact";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<section class="content">
    @using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Name, "Name", new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Pet name" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Age, "Age", new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Age, new { @class = "form-control", placeholder = "Pet age" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Email, "Email", new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email contact", type="email" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Description, "Description", new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Description, new { @class = "form-control", placeholder = "Pet description" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary btn-lg">Send</button>
            </div>
        </div>
    }
</section>